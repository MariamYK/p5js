    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.6.0/p5.js"></script>
    <script>
      function setup() {
  createCanvas(800, 800);
  var halfAngle
  var angle
  var a
  var sx
  var sy
  }

function draw() {
  background(random(25,10,205)); //creates dark flashing background
  strokeWeight(2)
  rect(mouseX,mouseY,170,400) //body of space shuttle (center part/rectangle)

  fill("white")
  strokeWeight(1.5)
  triangle(mouseX , mouseY, mouseX + 90, mouseY - 70 , mouseX + 170, mouseY); // top portion of space shuttle

  stroke("navy")
  strokeWeight(3.5)
  textSize(60)
  text("S", mouseX + 5, mouseY + 50)
  text("H", mouseX + 5, mouseY + 105)
  text("U", mouseX + 5, mouseY + 165)
  text("T", mouseX + 8, mouseY + 225)
  text("T", mouseX + 8, mouseY + 280)
  text("L", mouseX + 12, mouseY + 333)
  text("E", mouseX + 10, mouseY + 392)
  //name on left side of spacecraft
  
  fill("maroon")
  stroke("white")
  quad(mouseX + 80, mouseY + 400.5, mouseX + 83, mouseY + 400.5, mouseX - 19, mouseY + 470, mouseX + 200, mouseY + 470)// base of shuttle
  
  translate(width*0.47, height*0.4); 
  /*
  determines if star should go more off screen (higher numbers in width and
  height multiplying values) or stay within the inner areas of the screen (smaller
  multiplying values of width and height)
  */
  
  rotate(frameCount / 100.0); //what areas the big star will orbit on
  stroke("white")
  star(300, 100, 5, 70, 30); //coordinations of big revolving star around screen
  
}
  function mouseMoved() {
    fill(random(255,255,255));
    ellipse(90,90,20,20) //star rotating in area closest to center
    
    rotate(frameCount / 50.0);
    ellipse(70,70, 15, 15) // star rotating around second circular motion within center
    
    fill("gold")
    noStroke();
    rotate(frameCount / 200.0);
    ellipse(140,140,25,25) // star orbitting around third closest area to the center 

    fill("silver")
    rotate(frameCount / 300.0);
    ellipse(200,200, 12, 12) // star revolving in a circle amongst fourth orbit 
    
    fill("gold")
    rotate(frameCount / 100.0)
    ellipse(300, 300, 18, 18) // star circulating the farthest areas from the center
         
    fill("maroon")  
    stroke("white") //these colors are set so that space shuttle colors don't change
  
}
   function keyPressed() {
  
  var diameter = 80;
  var p1 = diameter;
  var p2 = p1+diameter;
  var p3 = p2+diameter;
  var p4 = p3+diameter;
  // variables set for points (p1, p2, ...)
     
  rotate(frameCount / 700.0) //positioning of which areas squares 1 and 2 and their stars will circulate
  translate(140, 0); //direction and orientation of square #1

  stroke(random(225));
  line(p3, p3, p2, p3);
  line(p2, p3, p2, p2);
  line(p2, p2, p3, p2);
  line(p3, p2, p3, p3);
  //lines forming orbitting square #1
     
  stroke(255);
  point(p1, p1);
  point(p1, p3); 
  point(p2, p4);
  point(p3, p1); 
  point(p4, p2);
  point(p4, p4);
  //dots around square #1
     
     
  translate(-30, 110); //direction and orientation of square #2 and its corresponding outer points
     
  stroke(random(150));
  line(p3, p3, p2, p3);
  line(p2, p3, p2, p2);
  line(p2, p2, p3, p2);
  line(p3, p2, p3, p3);
  // lines that form square #2
     
  stroke(500);
  point(p1, p1);
  point(p1, p3); 
  point(p2, p4);
  point(p3, p1); 
  point(p4, p2);
  point(p4, p4);
  // points outside square #2
}
   

function star(x, y, radius1, radius2, npoints) {
  var angle = TWO_PI / npoints;
  var halfAngle = angle/2.0;
  beginShape();
  for (var a = 0; a < TWO_PI; a += angle) {
    var sx = x + cos(a) * radius2;
    var sy = y + sin(a) * radius2;
    vertex(sx, sy);
    sx = x + cos(a+halfAngle) * radius1;
    sy = y + sin(a+halfAngle) * radius1;
    vertex(sx, sy);
  }
  endShape(CLOSE); 
  //code for shape of big circulating star
}
    </script>
